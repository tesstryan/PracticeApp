<h1>Blog Posts</h1>

<p><%= link_to 'Add a New Post', new_post_url %></p>

<ul class="pagination">
  <li><%= paginate @posts %></li>
</ul>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.name %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Show', post_url(post) %></td>
      <td><%= link_to 'Edit', edit_post_url(post) %></td>
      <td><%= link_to 'Destroy', post_url(post), method: 'delete', data: { confirm: "Do you really want to delete this post?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

